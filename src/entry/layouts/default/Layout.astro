---
import type { Locale } from '@/i18n';

// 从路径中提取语言
const pathname = Astro.url.pathname;
const isChinese = pathname.startsWith('/zh');
const locale = (isChinese ? 'zh' : 'en') as Locale;

interface Props {
  title?: string;
  description?: string;
}

const { title = 'Sophye AI', description = 'Your intelligent AI assistant' } = Astro.props;
---

<!DOCTYPE html>
<html lang={locale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="stylesheet" href="/src/shared/styles/global.css" />
  </head>
  <body className="font-sans bg-white text-secondary-900">
    <main className="pt-24 pb-16">
      <slot />
    </main>
  </body>
</html>
